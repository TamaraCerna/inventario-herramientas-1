# ===============================
# üèóÔ∏è Etapa 1: Construir la app
# ===============================
FROM node:18-alpine AS build

WORKDIR /app

# Copiar package.json e instalar dependencias
COPY package*.json ./
RUN npm install

# Copiar todo el proyecto y compilar
COPY . .
RUN npm run build

# ===============================
# üåê Etapa 2: Servir con Nginx
# ===============================
FROM nginx:1.25-alpine

# Elimina la configuraci√≥n por defecto de Nginx
RUN rm -rf /usr/share/nginx/html/*

# Copia los archivos compilados al contenedor de Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Copia configuraci√≥n personalizada para React Router
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exponer el puerto 80 (usado dentro del contenedor)
EXPOSE 80

# Comando de inicio
CMD ["nginx", "-g", "daemon off;"]


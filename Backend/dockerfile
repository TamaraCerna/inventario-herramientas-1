# Etapa 1: Construcci√≥n del JAR
FROM maven:3.9.4-eclipse-temurin-17 AS build
WORKDIR /app

# Copiar archivos del proyecto
COPY pom.xml .
COPY src ./src

# Compilar sin ejecutar tests
RUN mvn clean package -DskipTests

# Etapa 2: Imagen final con el JAR listo
FROM eclipse-temurin:17-jdk-jammy
WORKDIR /app

# Copiar el .jar generado desde la etapa anterior
COPY --from=build /app/target/*.jar app.jar

# Exponer el puerto del backend
EXPOSE 8080

# Variables de entorno por defecto (puedes sobreescribirlas al ejecutar)
ENV SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/toolrent_db
ENV SPRING_DATASOURCE_USERNAME=postgres
ENV SPRING_DATASOURCE_PASSWORD=admin

# Keycloak config  üëá AQU√ç VA
ENV SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://keycloak:8080/realms/sisgr
ENV SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=http://keycloak:8080/realms/sisgr/protocol/openid-connect/certs

# Comando de inicio
ENTRYPOINT ["java", "-jar", "app.jar"]
